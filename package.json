{
  "name": "get-things-done-front",
  "version": "1.2.2",
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "node -r dotenv/config ./node_modules/.bin/vite",
    "build": "yarn clean && tsc && node -r dotenv/config ./node_modules/.bin/vite build --mode production",
    "clean": "npx rimraf dist",
    "preview": "node -r dotenv/config ./node_modules/.bin/vite preview ",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "cy": "npx cypress open",
    "cy-run-components": "npx cypress run --component",
    "cy-run-e2e-mobile": "npx cypress run --e2e --env isMobile=true",
    "cy-run-e2e": "npx cypress run --e2e",
    "cy-ci": "npx cypress install && yarn dev",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test-edge": "NODE_ENV=test vitest",
    "lint-format": "prettier . --write --single-quote --single-attribute-per-line",
    "lint-check": "prettier . --check --single-quote --single-attribute-per-line",
    "commit": "npx git-cz",
    "ci": "./CI.sh",
    "release": "standard-version",
    "add-vault": "npx dotenv-vault new",
    "vault-login": "npx dotenv-vault@latest login",
    "vault-open": "npx dotenv-vault@latest open",
    "vault-build": "npx dotenv-vault@latest build",
    "vault-keys": "npx dotenv-vault keys",
    "vault-pull": "npx dotenv-vault@latest pull",
    "vault-push": "npx dotenv-vault@latest push"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@react-oauth/google": "^0.11.0",
    "@types/firebase": "^3.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "axios": "^1.4.0",
    "dotenv": "^16.4.1",
    "dotenv-vault": "1.26.0",
    "firebase": "^10.7.1",
    "fortawesome": "^0.0.1-security",
    "openai": "^4.27.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.21.1",
    "react-router-dom": "^6.21.1",
    "react-secure-storage": "^1.3.2",
    "styled-components": "^6.0.0-rc.3",
    "typescript": "^4.9.3",
    "uuid": "^9.0.1",
    "vite": "^4.1.0"
  },
  "devDependencies": {
    "@lerna/project": "^5.1.8",
    "@storybook/addon-essentials": "^7.0.22",
    "@storybook/addon-interactions": "^7.0.22",
    "@storybook/addon-links": "^7.0.22",
    "@storybook/blocks": "^7.0.22",
    "@storybook/react": "^7.0.22",
    "@storybook/react-vite": "^7.0.22",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-test-renderer": "^18.0.7",
    "@types/uuid": "^9.0.7",
    "cypress": "^13.12.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^5.1.8",
    "mol-conventional-changelog": "^1.4.3",
    "prettier": "3.1.0",
    "prop-types": "^15.8.1",
    "pwa-asset-generator": "^6.3.1",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "storybook": "^7.0.22",
    "ts-jest": "^29.1.1",
    "vite-plugin-pwa": "^0.19.2",
    "vitest": "^2.0.5",
    "workbox-build": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "verbose": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "testMatch": [
      "<rootDir>/**/*.spec.tsx"
    ],
    "coverageDirectory": "../testCov/",
    "coverageThreshold": {
      "global": {
        "line": 40
      }
    },
    "collectCoverage": true,
    "cleanMocks": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.svg?$": "jest-transform-stub"
    }
  }
}
